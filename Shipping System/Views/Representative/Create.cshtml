@model RepresentativeVM
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <strong class="card-title ">المناديب</strong>
            <form method="post" asp-action="Create" asp-controller="Representative" class="form-sample">
                <p class="card-description"> بيانات المندوب </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">الاسم بالكامل</label>
                            <div class="col-sm-9">
                                <input asp-for="FullName" type="text" class="form-control" />
                                <span style="color:red" asp-validation-for="FullName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">العنوان</label>
                            <div class="col-sm-9">
                                <input asp-for="Address" type="text" class="form-control" />
                                <span style="color:red" asp-validation-for="Address"></span>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">الفرع</label>
                            <div class="col-sm-9">
                                <select asp-for="Branch_Id" class="form-control">
                                    <option value=2>بنها</option>
                                    <option value=4> طنطا</option>
                                </select>
                                <span style="color:red" asp-validation-for="Branch_Id"></span>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">المدينة</label>
                            <div class="col-sm-9">
                                <select asp-for="City_Id" class="form-control">
                                    <option value=3>بنها</option>
                                    <option value=4> طنطا</option>
                                </select>
                                <span style="color:red" asp-validation-for="City_Id"></span>

                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">المحافظة</label>
                            <div class="col-sm-9">
                                <select asp-for="Governate_Id" class="form-control">
                                    <option value=1>الشرقية</option>
                                    <option value=2>سوهاج</option>
                                    <option value=3>الغربية</option>
                                    <option value=4>الدهقلية</option>
                                </select>
                                <span style="color:red" asp-validation-for="Governate_Id"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">اسم المستخدم</label>
                            <div class="col-sm-9">
                                <input asp-for="UserName" type="text" class="form-control" />
                                <span style="color:red" asp-validation-for="UserName"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">البريد الالكتروني</label>
                            <div class="col-sm-9">
                                <input asp-for="Email" type="email" class="form-control" />
                                <span style="color:red" asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">رقم الهاتف</label>
                            <div class="col-sm-9">
                                <input asp-for="PhoneNumber" type="text" class="form-control" />
                                <span style="color:red" asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">كلمة المرور</label>
                            <div class="col-sm-9">
                                <input asp-for="Password" type="password" class="form-control" />
                                <span style="color:red" asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">تاكيد كلمة المرور</label>
                            <div class="col-sm-9">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                <span style="color:red" asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">نوع الخصم</label>
                            <div class="col-sm-9">
                                <input asp-for="type_of_discount" type="number" placeholder="النسبه المئوية" class="form-control" />
                                <span style="color:red" asp-validation-for="type_of_discount"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">نسية الشركه من الطلب</label>
                            <div class="col-sm-8">
                                <input asp-for="company_percantage" type="number" class="form-control" />
                                <span style="color:red" asp-validation-for="company_percantage"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="اضافة" class=" btn btn-primary" />
                </div>
                <div class="row">
                    <input asp-for="Id" type="hidden" value=1 class=" btn btn-primary" />
                </div>

                <div asp-validation-summary="All">
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
